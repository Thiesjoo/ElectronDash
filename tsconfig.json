{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"strict": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"paths": {
			"@helpers/*": ["src/helpers/*"],
			"@services/*": ["src/services/*"],
			"@mytypes/*": ["src/@types/*"]
		}
	},
	"include": ["src/**/*"]
}
